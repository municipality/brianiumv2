{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "rootDir": "app",
    "outDir": "dist/app",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ]
}
